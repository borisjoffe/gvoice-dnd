{
    "globals": {
		"GM_xmlhttpRequest": true
    },
    "rules": {
		"comma-dangle": [0, "always-multiline"],
        "indent": [0, "tab"],
        //"indent": [2, "tab", {"VariableDeclarator": 0}],
        //"quotes": [1, "single"],
        "linebreak-style": [2, "unix"],
